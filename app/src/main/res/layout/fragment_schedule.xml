<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <NumberPicker
            android:id="@+id/timePicker1"
            android:layout_width="80dp"
            android:layout_height="104dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:timePickerMode="spinner"

            app:layout_constraintStart_toStartOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <NumberPicker
            android:id="@+id/timePicker3"
            android:layout_width="80dp"
            android:layout_height="104dp"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="8dp"
            android:timePickerMode="spinner"
            app:layout_constraintStart_toStartOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <NumberPicker
            android:id="@+id/timePicker4"
            android:layout_width="80dp"
            android:layout_height="104dp"
            android:layout_centerHorizontal="true"

            android:layout_marginStart="116dp"
            android:layout_marginTop="8dp"
            android:timePickerMode="spinner"
            app:layout_constraintStart_toStartOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <NumberPicker
            android:id="@+id/timePicker2"
            android:layout_width="76dp"
            android:layout_height="104dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="4dp"
            android:timePickerMode="spinner"
            app:layout_constraintStart_toStartOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="64dp"
            android:text="Включить камин через:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="38dp"
            android:layout_height="29dp"
            android:text="Ч"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/timePicker1"
            app:layout_constraintStart_toEndOf="@+id/timePicker1" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="38dp"
            android:layout_height="29dp"
            android:text="Ч"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/timePicker3"
            app:layout_constraintStart_toEndOf="@+id/timePicker3" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="38dp"
            android:layout_height="29dp"
            android:text="М"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/timePicker2"
            app:layout_constraintStart_toEndOf="@+id/timePicker2" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="38dp"
            android:layout_height="29dp"
            android:text="М"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/timePicker4"
            app:layout_constraintStart_toEndOf="@+id/timePicker4" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="Отключить камин через:"
            app:layout_constraintStart_toStartOf="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/button" />

        <Button
            android:id="@+id/button"
            android:layout_width="230dp"
            android:layout_height="38dp"
            android:layout_marginTop="12dp"
            android:text="Запланировать включение"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/textView15"
            app:layout_constraintStart_toStartOf="@+id/timePicker1"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <Button
            android:id="@+id/button2"
            android:layout_width="230dp"
            android:layout_height="38dp"
            android:layout_marginTop="12dp"
            android:text="Запланировать отключение"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/textView17"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/timePicker3"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Действующее расписание: (Todo: дополнить)"
            app:layout_constraintStart_toStartOf="@+id/timePicker3"
            app:layout_constraintTop_toBottomOf="@+id/button2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>